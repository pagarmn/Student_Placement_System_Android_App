<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout tools:context=".MainActivity" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="35dp" android:text="NAME:" android:id="@+id/textview"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/edittext" android:layout_below="@id/textview"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="35dp" android:text="BRANCH" android:id="@+id/textview1" android:layout_below="@id/edittext"/>

    <Spinner android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/edittext1" android:layout_below="@id/textview1"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="35dp" android:text="PASSWORD" android:id="@+id/textview2" android:layout_below="@id/edittext1"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/edittext2" android:layout_below="@id/textview2"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="35dp" android:text="ID:" android:id="@+id/textview3" android:layout_below="@id/edittext2"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/edittext3" android:layout_below="@id/textview3"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="30dp" android:text="ADD" android:id="@+id/btnsave" android:layout_below="@id/edittext3"/>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainStudent"
    android:orientation="vertical">
    <Button
        android:id="@+id/btncomview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="view company details"/>
    <Button
        android:id="@+id/btnupview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="view previous year paper"/>

    <Button
        android:id="@+id/btnselview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="view selected students"/>
</LinearLayout>